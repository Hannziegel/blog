<div class="container">
  <div class="user-container">
    <div class="user-image"> <%= image_tag @user.photo %> </div>
    <div class="user-info">
      <h2 class="user-name"> <%= @user.name %> </h2>
      <div class="post-counter"> Post Counter: <%= @user.posts_counter %> </div>
    </div>
  </div>

  <div class="bio-container">
    <span> Bio: </span>
    <div class="user-bio"> <%= @user.bio%> </div>
  </div>

  <div class="posts-container">
    <% @user.last_three_posts.each do |post| %>
      <div class="post-container">
        <div class="post-title"> <%= post.title %> </div>
        <p><%= post.text %> </p>
        <div class="counters-container">
          <span>Comments: <%= post.comments_counter %> </span>
          <span>Likes: <%= post.likes_counter %> </span>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to user_posts_path(@user) do %>
     <button class="posts-button" type="button"> See all Posts </button>
  <% end %>

  <%= link_to new_user_post_path(@user) do %>
    <button class="posts-button"> Create new Post </button>
  <% end %>
</div>
